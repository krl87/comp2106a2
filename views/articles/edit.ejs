<%- include ../partials/header.ejs %>

<main>
    <form method="post" action="<%= article._id%>">
        <fieldset>
            <label for="title">Title:*</label>
            <input type="text" name="title" required value="<%= article.title %>" />
        </fieldset>
        <fieldset>
            <label for="content">Content:*</label>
            <textarea name="content" id="content" required><%= article.content %>
                </textarea>

        </fieldset>
        <button class="btn btn-primary" type="submit">Save</button>

        <a href="/articles/delete/<%= article._id %>" title="Delete" class="confirmation">
        <button class="btn btn-danger" type="button">Delete</button>
        </a>
    </form>
</main>

<%- include ../partials/footer.ejs %>